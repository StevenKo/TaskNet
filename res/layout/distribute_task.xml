<?xml version="1.0" encoding="utf-8"?>

<AbsoluteLayout android:id="@+id/AbsoluteLayout01" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" orientation="vertical">
<TextView android:id="@+id/hostName" android:textSize="30dip" android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="center_vertical" />
<TextView android:text="MethodName" android:textSize="20dip" android:layout_height="40dip" android:layout_width="150dip" android:layout_x="20dip" android:layout_y="50dip"/>
<EditText android:id="@+id/methodName" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_x="20dip" android:layout_y="80dip"/>
<TextView android:text="TaskLoad" android:textSize="20dip" android:layout_height="40dip" android:layout_width="fill_parent" android:layout_x="20dip" android:layout_y="150dip"/>
<EditText android:id="@+id/taskLoad" android:layout_width="fill_parent" android:layout_height="40dip" android:layout_x="20dip" android:layout_y="180dip"/>
<Button android:id="@+id/distributeGlobalButton" android:layout_width="200dip" android:layout_height="40dip" android:text="Distribute" android:layout_x="20dip" android:layout_y="230dip"></Button>
<Button android:id="@+id/distributeLocalButton" android:layout_width="200dip" android:layout_height="40dip" android:text="Distribute Locally" android:layout_x="20dip" android:layout_y="270dip"></Button>
<Button android:id="@+id/exitButton" android:layout_width="130dip" android:layout_height="40dip" android:text="Exit" android:layout_x="20dip" android:layout_y="320dip"></Button>

<ListView android:id="@+id/ListView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:layout_x ="0dip"
				android:layout_y ="180dip"  />
<EditText android:id="@+id/param1" android:layout_width="120dip" android:layout_height="40dip" android:layout_x="40dip" android:layout_y="200dip" android:visibility="invisible"/>
<EditText android:id="@+id/param2" android:layout_width="120dip" android:layout_height="40dip" android:layout_x="40dip" android:layout_y="250dip" android:visibility="invisible"/>
	 
	 
</AbsoluteLayout>